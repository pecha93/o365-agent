{
  "name": "cursor-node-react-starter",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier -w .",
    "test": "turbo run test",
    "prepare": "husky",
    "db:generate": "pnpm -C apps/api prisma:generate",
    "db:migrate:dev": "pnpm -C apps/api prisma:migrate:dev",
    "db:migrate:deploy": "pnpm -C apps/api prisma:migrate:deploy",
    "db:studio": "pnpm -C apps/api prisma:studio"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-release": "^24.0.0",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,css}": [
      "prettier -w"
    ]
  }
}
